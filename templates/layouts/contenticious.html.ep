<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"><head>
    <% my $t = join ' - ' => grep { $_ } stash('title'), config('name'); %>
    <% $t = config('name'); %>
    <title><%= $t || 'Mojo::Debut' %></title>
    <meta charset="UTF-8" />
    <meta http-equiv="Pragma" content="no-cache">
    <meta name="viewport" content="width=device-width,user-scalable=no" />
    <!--link rel="stylesheet" type="text/css" href="/styles/contenticious.css" /-->
    <!--link rel="stylesheet" type="text/css" href="/styles/mojolicious.css" /-->

    <link rel='stylesheet' type='text/css' href='/fonts/font-test.b64.css' />
    <link rel='stylesheet' type='text/css' href='/styles/main.css' />
    <link rel='stylesheet' type='text/css' href='/styles/width.css' />

    <!--script type="text/javascript" src="/libs/angular/dist/angular.min.js"></script-->
    <script type="text/javascript" src="/libs/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/libs/jquery-cycle/build/jquery.cycle2.min.js"></script>

    <script type="text/javascript" src="/scripts/Debugger.js"></script>
    <script type="text/javascript" src="/scripts/control.js"></script>

</head>
<body onload="load();">
  <div id="uni-sol" style="min-width:460px">
  	<div>
  		<img id="layer1" alt="Blue Earth from Space" width="100%" src="/images/PlanetEarthBluePlanet.png" />
		<canvas id='cv' width='1280' height='720'  style="image-rendering:optimizespeed ! important;"></canvas>
  	</div>

	<% if (config 'copyright') { %>
	<p id="copyright">
		&copy;
		<%= 1900 + (localtime)[5] %>
		<%= config 'copyright' %>
	</p>
	<% } %>
	<p id="built_with">
		...built with
		<a href="http://memowe.github.com/contenticious">contenticious</a>.
	</p><!--footer -->
  </div>

  <div id="transparent_background" style="min-width:460px"></div>
  <div id="home_screen" style="min-width:460px">
	  <div id="trademark">
							IxD:<br />
							Web:<br />
							Viz:<br />
	  </div>

	  <div id="title" class="titles" style="min-width:460px">
		<h1><%
	{
		no strict 'vars';
		if( defined $t and ($t !~ /Real~Currents/) ) {
			%><%= $t || 'Mojo::Debut' %><%
		} else {
			%><a href="/">
				<span style="color:#00FF00">Real</span><span style="color:rgb(17,187,255)">~Currents</span>
			</a><%
		}
	}
		%></h1><br />
			<!--span id='mode'>reading: </span><a id='read_site' href=''></a-->
		</div>
        <br />
        <br />

		<div id="content" style="min-width:460px">
%= content

			<div id='mojo-version'>
				<p><img src="/images/triad.png" /></p>
				<a href="/perldoc">Mojolicious</a><br />
			</div>
			<br /><br /><br />
		</div><!-- content -->
    </div>

	<div id="control" onclick="(function(evt) { if (!aud1.paused) aud1.pause(); if (evt.target.innerHTML=='Play') { if (!!window.playVideo) { window.playVideo(); evt.target.parentNode.className='playing'; var playToggle = window.document.querySelector('#aud1_play'); if (!!playToggle) playToggle.innerHTML='Now Playing'; } } } (event))" >
        <a id="toggle_control" href="#" onclick="(function(evt) { if (aud1.muted && !window.userTriggered) setTimeout(function () { aud1.muted=false; }, 533); window.userTriggered=true; window.document.querySelector('canvas#fathers').style='image-rendering: optimizespeed !important; width: 960px; height: 540px; margin-left: -240px; position: fixed; top: 25%;' } (event));">Hide Control</a>
	</div>

<!--[if lt IE 9]><script type="text/javascript">
try{ document.createElement('canvas').getContext('2d');} catch(e){
document.getElementsByTagName('body')[0].onload='';
alert("Your browser is missing some essential features and capabilities.\n Please install a recent release of Mozilla Firefox or Google Chrome.");
}
</script><![endif]-->

<script type="text/javascript">
    var canvas = (window.document.querySelector('canvas#cv') !== null) ?
        window.document.querySelector('canvas#cv') :
        window.document.createElement('canvas');

    function load() {
        canvas.id = 'cv';
        if (window.innerWidth < 1024) {
            canvas.width = window.innerWidth; //document.getElementById("layer1").getAttribute('width');
            canvas.height = 9*canvas.width/16; //document.getElementById("layer1").getAttribute('height');
        } else {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            canvas.style.display = 'block';
            canvas.style.margin = 'auto';
            canvas.style.width = window.outerWidth + 'px';
            if (window.outerWidth * 0.99 * canvas.height / canvas.width < window.innerHeight) {
                canvas.style.height = window.outerWidth * canvas.height / canvas.width + 'px';
            } else {
                canvas.style.height = window.outerHeight * 0.99 + 'px';
                canvas.style.width = window.outerHeight * canvas.width / canvas.height + 'px';
            }
        }

        document.getElementById('uni-sol').children[0].replaceChild( canvas, document.getElementById("layer1") );

        if (typeof Debugger === "function") {
  	    //Debugger.on = false;
  	} else {
  	    window.Debugger = {
  	        log: function() {
  		    /* no debugger.js */
  		}
  	    };
  	}

        if (!!window.canvasApp) canvasApp(canvas);

        setTimeout(function () { window.document.body.style += ' overflow-y: scroll;'; }, 533);
    }
</script>
</body></html>
